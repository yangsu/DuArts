body
  padding-top: 43px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

#logo
  max-height: 100%
  margin: 0 auto
  display: block

.bar-title
  // Use nib to include css3
  background-image: -webkit-linear-gradient(top, #2b2b2b 0, #000000 100%)

.bar-tab
  position: relative
  height: 40px
  .tab-item
    padding-top: 4px

.bar-title ~ .content
  top: 82px

.listimg
  max-width: 400px

// Overrides
.nav
  padding-top: 0
.content-padded
  padding: 0
.slider h2
  position: absolute
  top: 130px
  left: 10px
.slider h2 span
  color: white
  font: bold 24px/45px Helvetica, Sans-Serif
  letter-spacing: -1px
  background: rgb(0, 0, 0) /* fallback color */
  background: rgba(0, 0, 0, 0.7)
  padding: 10px
.full-img
  width: 100%
#detail
  padding: 10px

.eventpage
  width: auto
  margin: 10px
  .list.inset
    margin: 10px 0

.eventlabel
  display: inline-block
  width: 80%

/* Individual slide */
.slider > ul > li
  position: relative

@import 'maps'
@import 'classes'
@import 'eventPage'
@import 'calendar'