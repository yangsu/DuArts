body
  padding-top: 32px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

#logo
  max-height: 100%
  margin: 0 auto
  display: block

.bar-tab
  position: fixed
  bottom: 0px
  height: 40px
  .tab-item
    padding-top: 4px

.bar-title ~ .content
  top: 32px

.listimg
  max-width: 400px

// Overrides
.bar-title
  height: 33px
  padding: 2px
.nav
  padding-top: 0
.segmented-controller
  margin-left: 10px
  margin-right: 10px
.content-padded
  padding: 0

#detail
  padding: 10px

.eventpage
  width: auto
  margin: 10px
  .list.inset
    margin: 10px 0

.eventlabel
  display: inline-block
  width: 85% /* Used to be 80 */

.list
  & > .segmented-controller-item
    padding: 0
  .list
    margin-bottom: 0

.segmented-controller
  margin: 0 10px
  border-radius: 3px

.slider
  .full-img
    width: 100%
  & > ul > li
    height: 200px
    position: relative
  h2
    position: absolute
    left: 10px
    bottom: 10px
    width: 100%
    span
      color: white
      font: bold 18px/32px Helvetica, Sans-Serif
      letter-spacing: -1px
      background: rgb(0, 0, 0) /* fallback color */
      background: rgba(0, 0, 0, 0.7)
      padding: 10px
      max-width: 90%
      white-space: normal
      display: inline-block

@import 'maps'
@import 'classes'
@import 'eventPage'
@import 'calendar'
@import 'admin'