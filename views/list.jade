extends layout

block content
    .slider
      ul
        each item in data
          li
            img.full-img(src=item.img)
            h2
              a(href='#{path}/#{item._id}', data-transition='slide-in')
                span= item.title

    ul.list.inset
        each item in data
            li
                a(href='#{path}/#{item._id}', data-transition='slide-in')
                    | #{item.title}
                span.chevron
    br
