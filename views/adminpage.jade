extends layout

block content
  .admin
    h2.title= resource
    .items
      each item in data
        form(data-id=item._id)
          .input-group
            .input-row
              label Title
              input(type='text', name='title', value=item.title, placeholder='')
            .input-row
              label Descriptions
              input(type='text', name='description', value=item.description, placeholder='')
            .input-row
              label Image
              input(type='text', name='img', value=item.img, placeholder='Image URL')

            .input-row
              label Location
              input(type='text', name='location', value=item.location, placeholder='location id')

            if (item.links)
              each link in item.links
                .input-row
                  label Link
                  input(type='text', name='link', value=link.link, placeholder='Link')
                .input-row
                  label Link Description
                  input(type='text', name='linkdescription', value=link.description, placeholder='Description')


          a.button.button-block.button-positive.item-link-add Add Link
          a.button.button-block.button-negative.item-delete Delete

    a.button-block.button-main#add Add New
    a.button-block.button-positive#save Save All
